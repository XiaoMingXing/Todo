{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}